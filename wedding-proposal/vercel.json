{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "installCommand": "npm install --no-audit --prefer-offline",
  "outputDirectory": "dist",
  "framework": "vite",
  "engines": {
    "node": "20.x"
  },
  "env": {
    "VITE_APP_NAME": "Wedding Proposal",
    "VITE_BUILD_ENV": "production"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" },
        { "key": "Content-Security-Policy", "value": "default-src 'self'; img-src 'self' https: data:; media-src 'self' https: data:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https:;" }
      ]
    }
  ],
  "redirects": [
    { "source": "/proposal", "destination": "/" },
    { "source": "/love", "destination": "/proposal" }
  ]
}
